# start_container: Starts a Docker container by name (supports wildcards) if it exists and is stopped.
# Usage: start_container <container_name_pattern>
# Outputs "Started <container_name>" for each stopped container started; otherwise, outputs nothing.
start_container() {
  container_name="$1"
  containers=$(docker ps -a --filter "name=$container_name" --format '{{.Names}}' | grep "$container_name")
  if [ -n "$containers" ]; then
    for name in $containers; do
      status=$(docker inspect --format '{{.State.Status}}' "$name")
      if [ "$status" = "exited" ]; then
        docker start "$name" > /dev/null
        echo "Started $name"
      fi
    done
  fi
}
