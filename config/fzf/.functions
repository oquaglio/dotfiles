fzgrep() {
  local search_term="$1"
  if [ -z "$search_term" ]; then
    echo "Usage: fzgrep <search_term>"
    return 1
  fi
  rg --color=always --line-number --no-heading --smart-case "$search_term" \
    | fzf --ansi \
          --delimiter : \
          --preview 'bat --style=numbers --color=always --highlight-line {2} {1}' \
          --preview-window=right:50%
}