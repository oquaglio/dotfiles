# PATH needs to be appended in order in some cases, so probably best to put them
# all in this one file.

# Put all the PATH= paths here so the order can be controlled.

pathadd $HOME/.local/bin
pathadd $HOME/bin
pathadd $DOTFILES_ROOT/bin
pathadd $DOTFILES_ROOT/bin/aws
pathadd /usr/local/man MANPATH

# For Homebrew (likes to be before bin)
prepend_path /home/linuxbrew/.linuxbrew/bin
prepend_path /home/linuxbrew/.linuxbrew/sbin
pathadd /home/linuxbrew/.linuxbrew/share/man MANPATH

# Go path (for KinD)
pathadd $HOME/go/bin

# Other paths (could move to config subdirs)

# OMZ
pathadd $HOME/.oh-my-zsh ZSH

# NVM
pathadd $HOME/.nvm NVM_DIR

# pyenv
pathadd $PYENV_ROOT
pathadd $PYENV_ROOT/bin

# dotnet
prepend_path $DOTNET_ROOT
prepend_path $DOTNET_ROOT/tools
