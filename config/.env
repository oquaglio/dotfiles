# ── Public IP (async -- reads cache instantly, refreshes in background) ──
_ip_cache="$HOME/.cache/my_public_ip"
if [[ -r "$_ip_cache" ]]; then
    export MY_PUBLIC_IP=$(<"$_ip_cache")
else
    export MY_PUBLIC_IP="pending"
fi
# Background refresh (won't block startup)
{ curl -s --connect-timeout 3 --retry 0 ifconfig.me 2>/dev/null > "$_ip_cache" || echo "offline" > "$_ip_cache"; } &!
unset _ip_cache

if [ -f /etc/os-release ]; then
  . /etc/os-release
  export DISTRO_NAME="${ID}${VERSION_ID}"
else
  export DISTRO_NAME="unknown"
fi

# Disable You Should Use plugin hardcore mode by default
export YSU_HARDCORE=0
