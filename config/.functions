# Usage: export DISTRO_GLYPH=$(get_distro_glyph "$DISTRO_NAME")
get_distro_glyph() {
  local distro
  # Convert to lowercase and remove anything after the base name:
  #   - everything from the first digit onward
  #   - common separators: -, ., _, space
  distro=$(echo "$1" | tr '[:upper:]' '[:lower:]' | sed -E 's/[-_.[:space:]]*[0-9].*//')
  case "$distro" in
    arch) echo "" ;;        # Arch Linux
    ubuntu) echo "" ;;      # Ubuntu
    debian) echo "" ;;      # Debian
    fedora) echo "" ;;      # Fedora
    centos) echo "" ;;      # CentOS
    alpine) echo "" ;;      # Alpine
    manjaro) echo "" ;;     # Manjaro
    opensuse) echo "" ;;    # openSUSE
    gentoo) echo "" ;;      # Gentoo
    raspbian) echo "" ;;    # Raspbian
    linuxmint) echo "" ;;   # Linux Mint
    elementary) echo "" ;;  # Elementary OS
    kali) echo "" ;;        # Kali Linux
    pop) echo "" ;;         # Pop!_OS
    zorin) echo "" ;;       # Zorin OS
    redhat) echo "" ;;      # Red Hat
    rocky) echo "" ;;       # Rocky Linux
    nixos) echo "" ;;       # NixOS
    garuda) echo "" ;;      # Garuda
    mxlinux) echo "" ;;     # MX Linux
    *) echo "" ;;           # Default: Tux
  esac
}

# alternate glyphs:
# # Fedora
# # Fedora

# Usage:
# split_colon_var PATH
# split_colon_var MANPATH
split_colon_var() {
    var_name="$1"
    eval "echo \"\$$var_name\"" | tr ':' '\n'
}

# Print the PATH and MANPATH in line-by-line format
paths() {
    for var in PATH MANPATH LD_LIBRARY_PATH PYTHONPATH PERL5LIB CLASSPATH; do
        if eval "[ -n \"\$$var\" ]"; then
            echo "$var:"
            split_colon_var "$var"
            echo
        fi
    done
}
