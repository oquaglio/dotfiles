# Usage:
# split_colon_var PATH
# split_colon_var MANPATH
split_colon_var() {
    var_name="$1"
    eval "echo \"\$$var_name\"" | tr ':' '\n'
}

paths() {
    echo "PATH:"
    echo "$PATH" | tr ':' '\n'
    echo
    echo "MANPATH:"
    echo "$MANPATH" | tr ':' '\n'
    echo
    echo "LD_LIBRARY_PATH:"
    echo "$LD_LIBRARY_PATH" | tr ':' '\n'
    echo
    echo "PYTHONPATH:"
    echo "$PYTHONPATH" | tr ':' '\n'
    echo
    echo "PERL5LIB:"
    echo "$PERL5LIB" | tr ':' '\n'
    echo
    echo "CLASSPATH:"
    echo "$CLASSPATH" | tr ':' '\n'
}
