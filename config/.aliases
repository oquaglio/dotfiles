# automatically changes your shell's directory to whatever directory you navigate to in ranger when you exit
alias ranger='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'
# taskwarrior (uses command to bypass the taskfile 'task' alias)
alias tw='command task'
alias twf='function _twf() { if [ -z "$1" ]; then echo "Usage: twf <searchstring>"; return 1; fi; tw "($1 or project.has:$1)"; }; _twf'
alias pp='command task'
alias pf='function _taskwarrior_find() { if [ -z "$1" ]; then echo "Usage: twf <searchstring>"; return 1; fi; tw "($1 or project.has:$1)"; }; _taskwarrior_find'
